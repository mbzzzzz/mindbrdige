{
  "manifest_version": 3,
  "name": "MindBridge AI Companion",
  "version": "1.0",
  "description": "Select text on any page and send it to MindBridge AI for transformation.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
